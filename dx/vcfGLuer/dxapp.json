{
  "name": "vcfGLuer",
  "title": "vcfGLuer",
  "summary": "vcfGLuer",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "vcf_manifest",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ],
      "help": ""
    },
    {
      "name": "output_name",
      "class": "string",
      "default": "merged",
      "help": ""
    },
    {
      "name": "flags",
      "class": "string",
      "default": "",
      "help": "command-line flags for vcfGLuer"
    },
    {
      "name": "spark_default_parallelism",
      "class": "int",
      "default": 256,
      "help": "spark.default.parallelism (set at least the # cluster cores)"
    }
  ],
  "outputSpec": [
    {
      "name": "pvcf_parts",
      "class": "array:file",
      "help": ""
    },
    {
      "name": "cluster_runtime_logs_tarball",
      "label": "Cluster runtime logs tarball",
      "class": "file",
      "patterns": [ "*.tar.gz" ],
      "optional": true,
      "help": "Spark cluster logs"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "days": 14
      }
    },
    "interpreter": "bash",
    "file": "src/vcfGLuer.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "execDepends": [
      {"name": "libsnappy1v5"},
      {"name": "tabix"},
      {"name": "libhts3"}
    ]
  },
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "00COMMENT": "avoid instance types with multiple NUMA nodes e.g. mem3_ssd3_x96",
          "instanceType": "mem3_ssd3_x12",
          "clusterSpec": {
            "type": "apachespark",
            "version": "3.2.0",
            "initialInstanceCount": 2
          }
        }
      }
    }
  }
}
